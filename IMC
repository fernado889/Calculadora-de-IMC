  <!-- Bibliotecas CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

  <script>
    function calcularIMC() {
      const peso = parseFloat(document.getElementById("peso").value);
      const altura = parseFloat(document.getElementById("altura").value);
      const resultado = document.getElementById("resultado");

      if (!peso || !altura || altura <= 0) {
        resultado.innerText = "Preencha os campos corretamente.";
        resultado.style.color = "red";
        return;
      }

      const imc = peso / (altura * altura);
      let classificacao = "";

      if (imc < 18.5) classificacao = "Abaixo do peso";
      else if (imc < 24.9) classificacao = "Peso normal";
      else if (imc < 29.9) classificacao = "Sobrepeso";
      else if (imc < 34.9) classificacao = "Obesidade grau I";
      else if (imc < 39.9) classificacao = "Obesidade grau II";
      else classificacao = "Obesidade grau III";

      const info = {
        data: new Date().toLocaleString(),
        peso,
        altura,
        imc: imc.toFixed(2),
        classificacao
      };

      resultado.innerHTML = `Seu IMC é <strong>${info.imc}</strong> - ${info.classificacao}`;
      salvarHistorico(info);
      renderizarHistorico();
    }

    function limparCampos() {
      document.getElementById("peso").value = "";
      document.getElementById("altura").value = "";
      document.getElementById("resultado").innerHTML = "";
    }

    function salvarHistorico(info) {
      const historico = JSON.parse(localStorage.getItem("historicoIMC")) || [];
      historico.push(info);
      localStorage.setItem("historicoIMC", JSON.stringify(historico));
    }

    function renderizarHistorico() {
      const historico = JSON.parse(localStorage.getItem("historicoIMC")) || [];
      const lista = document.getElementById("historico-list");
      const ctx = document.getElementById("graficoIMC").getContext("2d");

      lista.innerHTML = "";
      let labels = [], valores = [];

      historico.forEach((item) => {
        labels.push(item.data.split(",")[0]);
        valores.push(parseFloat(item.imc));
        const li = document.createElement("li");
        li.innerText = `${item.data} - IMC: ${item.imc} (${item.classificacao})`;
        lista.appendChild(li);
      });

      if (window.meuGrafico) {
        window.meuGrafico.destroy();
      }

      window.meuGrafico = new Chart(ctx, {
        type: "line",
        data: {
          labels,
          datasets: [{
            label: "IMC",
            data: valores,
            borderColor: "#007acc",
            fill: false
          }]
        }
      });
    }

    function exportarPDF() {
      const { jsPDF } = window.jspdf;
      const doc = new jsPDF();
      const historico = JSON.parse(localStorage.getItem("historicoIMC")) || [];

      doc.setFontSize(16);
      doc.text("Histórico de IMC", 10, 10);

      doc.setFontSize(12);
      historico.forEach((item, i) => {
        doc.text(
          `${item.data} - Peso: ${item.peso}kg - Altura: ${item.altura}m - IMC: ${item.imc} (${item.classificacao})`,
          10,
          20 + i * 10
        );
      });

      doc.save("historico-imc.pdf");
    }

    function limparHistorico() {
      if(confirm("Tem certeza que deseja limpar todo o histórico?")) {
        localStorage.removeItem("historicoIMC");
        renderizarHistorico();
      }
    }

    window.onload = renderizarHistorico;
  </script>
</body>
